<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-md h-full w-full">
    <h2 class="text-xl font-semibold mb-4">Add User</h2>
    <form>
        <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700">Name</label>
            <input type="text" placeholder="Enter name" class="w-full input input-neutral p-2 border border-gray-300 rounded-md">
        </div>
        <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700">Email</label>
            <input type="email" placeholder="Enter email" class="w-full input input-neutral p-2 border border-gray-300 rounded-md">
        </div>
        <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700">Password</label>
            <input type="password" placeholder="Enter password" class="w-full input input-neutral p-2 border border-gray-300 rounded-md">
        </div>
        <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700">Role</label>
            <select class="w-full input input-neutral p-2 border rounded-md">
                <option value="user">User</option>
                <option value="admin">Admin</option>
            </select>
        </div>
        <button type="submit" class="w-full bg-blue-500 text-white p-2 rounded-md hover:bg-blue-600 mt-6">
            Add User
        </button>
    </form>
</div>
